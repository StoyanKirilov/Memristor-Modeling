# xor
# Logical operators and functions
# operator XOR (exclusive OR)
clear
clc
#
pkg load signal
# defining signals
N=1e5;
tmin=0;
tmax=3;
deltat=(tmax-tmin)/N;
t=tmin:deltat:tmax;
x1=(square(2*pi*2*t)+1)/2;
x2=(square(2*pi*2*t+deg2rad(-60))+1)/2;
#
#y1=~x1;
#y1=not(x1);
#y=and(x1,x2);
#y=x1|x2;
y=xor(x1,x2);
figure(1)
subplot(3,1,1)
plot(t,x1)
axis([-0.1 3.1 -0.1 1.1])
xlabel('Time, s')
ylabel('Input')
title('Input signal')
grid
subplot(3,1,2)
plot(t,x2)
axis([-0.1 3.1 -0.1 1.1])
xlabel('Time, s')
ylabel('Input')
title('Input signal')
grid
subplot(3,1,3)
plot(t,y)
axis([-0.1 3.1 -0.1 1.1])
xlabel('Time, s')
ylabel('Output')
title('Output signal')
grid
